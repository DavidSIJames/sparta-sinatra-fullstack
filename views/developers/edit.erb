<form action="/developers/<%= @developer.id %>" method="POST">
  <div class="form-group">
    <label for="first_name">Name</label>
    <input type="text" class="form-control" placeholder="Name" name="name" value="<%= @developer.name %>">
  </div>
  <div class="form-group">
    <label for="last_name">founded</label>
    <input type="date" class="form-control" placeholder="Date" name="founded" value="<%= @developer.founded %>">
  </div>
  <div class="form-group">
    <label for="dob">country</label>
    <input type="text" class="form-control"  name="country" value="<%= @developer.country %>">
  </div>
  <button type="submit" class="btn btn-default" value="PUT">Submit</button>

  <% if (@developer.id != '') %>
    <input type="hidden" name="_method" value="PUT">
  <% end %>
</form>
