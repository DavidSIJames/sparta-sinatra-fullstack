<form action="/games/<%= @game.id %>" method="POST">
  <div class="form-group">
    <label for="exampleInputEmail1">Title</label>
    <input type="text" class="form-control" placeholder="Title" name="title" value="<%= @game.title %>">
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Released</label>
    <input type="date" class="form-control" placeholder="Date" name="released" value="<%= @game.released %>">
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Genre</label>
    <input type="text" class="form-control" placeholder="Genre" name="genre" value="<%= @game.genre %>">
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Developer ID</label>
    <input type="text" class="form-control" placeholder="Developer ID" name="developer_id" value="<%= @game.developer_id %>">
  </div>

  <button type="submit" class="btn btn-default" value="PUT">Submit</button>

  <% if (@game.id != '') %>
    <input type="hidden" name="_method" value="PUT">
  <% end %>
</form>
